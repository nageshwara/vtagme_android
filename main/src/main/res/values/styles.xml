<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FullScreenAppTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:icon">@drawable/ic_launcher_white</item>
        <item name="android:background">@color/vtag_blue</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
