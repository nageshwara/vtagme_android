<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_selector"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/profile_image"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_action_person" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/profile_name"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_selector">
                <ImageView
                    android:id="@+id/friends_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/desc_list_item_icon"
                    android:src="@drawable/ic_action_group"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/friends_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/friends_icon"
                    android:textColor="@color/panel_list_item_title"
                    android:gravity="center_vertical"
                    android:text="@string/friends_title" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_selector">
                <ImageView
                    android:id="@+id/following_tags_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/desc_list_item_icon"
                    android:src="@drawable/ic_action_labels"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/following_tags_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/following_tags_icon"
                    android:textColor="@color/panel_list_item_title"
                    android:gravity="center_vertical"
                    android:text="@string/following_tags_title" />
            </RelativeLayout>
            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/following_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#cccc"
                tools:context="me.vtag.app.LeftDrawerFragment" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_selector">
                <ImageView
                    android:id="@+id/private_tags_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/desc_list_item_icon"
                    android:src="@drawable/ic_action_labels"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/private_tags_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/private_tags_icon"
                    android:textColor="@color/panel_list_item_title"
                    android:gravity="center_vertical"
                    android:text="@string/private_tags_title" />
            </RelativeLayout>
            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/private_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#cccc"
                tools:context="me.vtag.app.LeftDrawerFragment" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/list_selector">
                <ImageView
                    android:id="@+id/public_tags_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/desc_list_item_icon"
                    android:src="@drawable/ic_action_labels"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/public_tags_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/public_tags_icon"
                    android:textColor="@color/panel_list_item_title"
                    android:gravity="center_vertical"
                    android:text="@string/public_tags_title" />
            </RelativeLayout>
            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/public_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#cccc"
                tools:context="me.vtag.app.LeftDrawerFragment" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>