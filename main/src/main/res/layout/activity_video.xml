<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YoutubeVideoActivity">
    <FrameLayout
        android:id="@+id/player_wrapper"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >
        <FrameLayout
            android:id="@+id/movieplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </FrameLayout>
    </FrameLayout>
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="48dp"
        sothree:shadowHeight="1dp"
        sothree:dragView="@+id/dragview"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_details_container"></FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:clickable="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video_queue_comments_container"></FrameLayout>
            </ScrollView>
            <View
                android:id="@+id/dragview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="130dp"
                />
        </RelativeLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>